<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController">

    <top>
        <ToolBar>
            <Button text="Refresh" onAction="#handleRefresh"/>
            <Button text="Compose" onAction="#handleCompose"/>
            <Button text="Reply" onAction="#handleReply"/>
            <Button text="Delete" onAction="#handleDelete"/>
            <Button text="Settings" onAction="#handleSettings"/>
            <ToggleButton fx:id="cachingToggle" text="Caching: OFF" onAction="#handleCachingToggle"/>
        </ToolBar>
    </top>

    <left>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <Label text="Folders" style="-fx-font-weight: bold;"/>
            <TreeView fx:id="folderTree" VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <center>
        <SplitPane orientation="VERTICAL">
            <items>
                <!-- Email list -->
                <TableView fx:id="emailTable" prefHeight="300.0">
                    <!-- columns are created in controller -->
                </TableView>

                <!-- Reading pane -->
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>

                    <GridPane hgap="5.0" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="15.0"/>
                            <ColumnConstraints percentWidth="85.0"/>
                        </columnConstraints>

                        <rowConstraints>
                            <RowConstraints vgrow="NEVER"/>
                            <RowConstraints vgrow="NEVER"/>
                            <RowConstraints vgrow="NEVER"/>
                        </rowConstraints>

                        <children>
                            <Label text="From:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="fromLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Subject:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="subjectLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="dateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>

                    <Label text="Body:"/>
                    <TextArea fx:id="emailBodyArea"
                              VBox.vgrow="ALWAYS"
                              wrapText="true"/>
                </VBox>

            </items>
        </SplitPane>
    </center>

</BorderPane>
