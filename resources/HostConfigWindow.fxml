<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.HostConfigController"
      spacing="10.0">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <children>
        <GridPane hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="30.0"/>
                <ColumnConstraints percentWidth="70.0"/>
            </columnConstraints>

            <children>
                <Label text="Protocol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="protocolChoice" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Receive host:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="receiveHostField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Receive port:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="receivePortField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Send host:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="sendHostField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Send port:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="sendPortField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button text="Test" onAction="#handleTest"/>
            <Button text="Save" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </children>
</VBox>
